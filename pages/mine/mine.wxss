/* pages/mine/mine.wxss */
.mine-wrapper{
  background: #F7F7F7;
  font-size: 32rpx;
  color: rgba(0,0,0,0.65);
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: hidden;
}

.header{
  height: 256rpx;
  background: #fff;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
}
.portrait{
  width: 200rpx;
}
.portrait image{
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx;
  background: #F7F7F7;
}
.user-info{
  flex: 1;
}
.user-info .name{
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  height: 48rpx;
}


.main{
  height: 100%;
  background: #fff;
}

.line-container{
  display: flex;
  justify-content: space-between;
  background: #fff;
  align-items: center;
  padding: 0 24rpx;
   border-bottom: 2rpx solid #EBEBEB;
  height: 118rpx;
  position: relative;
  overflow: hidden;
}

.line-container image{
  width:32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.container-left{
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: rgba(0,0,0,0.85);
  font-weight: bold;
}
.line-container .status{
  display: flex;
  align-items: center;
}
.icon-go{
  margin-left: 10rpx;
  width: 30rpx;
  height: 30rpx; 
  background-image:url('data:image/svg+xml;base64,');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: inline-block;
}
.login-btn{
  color:#5697F5;
   border-bottom: 1rpx solid #5697F5;
   line-height: 36rpx;
   height: 36rpx; 
   display: inline-block;

}